POSTGRES_USER=stock_scanner
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=stock_scanner
POSTGRES_PORT=5432

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Frontend Configuration
